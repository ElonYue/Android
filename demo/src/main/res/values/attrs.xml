<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="textwidth" format="integer" />
    <attr name="typeface">
        <enum name="normal" value="0" />
        <enum name="sans" value="1" />
        <enum name="serif" value="2" />
        <enum name="monospace" value="3" />
    </attr>

    <!-- 定义一个属性 -->
    <attr name="duration"></attr>
    <!-- 定义一个styleable对象来组合多个属性 -->
    <declare-styleable name="AlphaImageView">
        <attr name="duration" />
    </declare-styleable>
    <!-- 定义ImageView 圆角属性 -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
        <attr name="fill_color" format="color" />
        <attr name="fill_width" format="dimension" />
    </declare-styleable>
    

    <!-- 滚轮 -->

    <declare-styleable name="wheel">
        <attr name="lineSplitHeight" format="reference|integer" />
        <attr name="textColorFirst" format="reference|color" />
        <attr name="textColorSecond" format="reference|color" />
        <attr name="textColorThird" format="reference|color" />
        <attr name="splitLineColor" format="reference|color" />
        <attr name="textSize" format="reference|integer" />
        <attr name="textGravity">
            <flag name="left" value="-1" />
            <flag name="center" value="0" />
            <flag name="right" value="1" />
        </attr>
    </declare-styleable>

</resources>